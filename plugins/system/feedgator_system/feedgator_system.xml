<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>System - FeedGator Automator Plugin</name>
	<author>Matt Faulds</author>
	<creationDate>October 2009</creationDate>
	<copyright>Trafalgar Design (UK) Ltd</copyright>
	<license>GPL 2.0</license>
	<authorEmail>matt@trafalgardesign.com</authorEmail>
	<authorUrl>http://www.trafalgardesign.com</authorUrl>
	<version>3.0a1</version>
	<description>FG_PLG_DESC</description>
	<files>
		<filename plugin="feedgator_system">feedgator_system.php</filename>
		<folder>fields</folder>
	</files>
	<languages>
	   <language tag="en-GB">en-GB.plg_system_feedgator_system.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="fgautomator" type="list" default="0" label="FG_PLG_PSEUDO" description="FG_PLG_PSEUDO_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="interval" type="text" default="5" label="FG_PLG_PCP_INT" description="FG_PLG_PCP_INT_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>